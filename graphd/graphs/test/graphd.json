{
"mysql": {
    "user": "root",
    "password": "vlad",
    "host": "localhost",
    "port": 3307,
    "database": "reppler",
    "layout": {
        "objects": {
            "user": {
                "id": { "table": "user", "field": "id" },
                "attrs": {
                    "name": { "field": "name", "type": "xsd:string" },
                    "email":  { "field": "email", "type": "xsd:string" }
                },
                "label": "name",
                "links": {
                    "wrote": { "to": "post", "field": "id",
                        "table": "ugc", "joinOn": "from_id" }
                }
            },
            "fan-page": {
                "id": { "table": "mobject", "field": "id" },
                "attrs": {
                    "name": { "field": "name", "type": "xsd:string" },
                    "url":  { "field": "link", "type": "xsd:anyURI" }
                },
                "label": "name",
                "links": {
                    "has-post": { "to": "post", "field": "id",
                        "table": "ugc", "joinOn": "mobject_id" }
                }
            },
            "post": {
                "id": { "table": "ugc", "field": "id" },
                "attrs": {
                    "created": { "field": "created_time", "type": "xsd:dateTime" }
                },
                "links": {
                    "contains-text": { "to": "text", "field": "ugc_txt_id" }
                }
            },
            "text": {
                "id": { "table": "ugc_txt", "field": "id" },
                "attrs": {
                    "content": { "field": "ugc_text", "type": "xsd:string" }
                },
                "links": {
                    "contains-url": { "to": "url", "field": "url_id",
                        "table": "url_ugc_txt", "joinOn": "ugc_txt_id" }
                }
            },
            "url": {
                "id": { "table": "url", "field": "id" },
                "attrs": {
                    "display_url": { "field": "display_url", "type": "xsd:anyURI" },
                    "actual_url":  { "field": "actual_url", "type": "xsd:anyURI" },
                    "detection_id": { "field": "detection_id", "type": "xsd:string",
                        "table": "url_detection", "joinOn": "url_id" }
                },
                "label": "display_url",
                "links": {
                }
            }
        }
    }
}}
